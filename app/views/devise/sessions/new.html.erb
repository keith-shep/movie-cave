<div class="d-flex justify-content-center mt-5">
  <div class="h-100 d-inline-block border border-primary rounded " style="width: 500px; background-color: white;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs p-3">
      <h2>Sign in</h2>
      <%= f.input :user_name,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "user_name" } %>
      <%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn btn-primary btn-sm mb-4 ml-4">
      <%= f.button :submit, "Log in", :class => "text-white" %>
    </div>
    <% end %>
    <div class="ml-4 mb-1">
      <%= render "devise/shared/links", :class => "ml-3" %>
    </div>

  </div>

</div>
