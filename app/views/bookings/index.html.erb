<div class="container d-flex flex-column align-items-center mb-5 " style="max-width: 500px">
  <h2 class="text-dark align-self-start">Confirmed bookings</h2>

  <% @bookings.each do |booking|%>
    <div class="card px-3 py-3 text-muted border border-primary m-2 w-100 shadow">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-dark"> <%= booking.cinema.location %> </h2>
        <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/cveneziani" >
      </div>
      <p class="text-dark">  </p>
      <ul class="list-unstyled pb-2">

        <li class="py-1"> <i class="far fa-calendar fa-fw"></i> <%= booking.date %> </li>
        <li class="py-1"> <i class="fas fa-male fa-fw"> </i> <%= booking.cinema.capacity %> pax </li>
        <li class="py-1"> <i class="fas fa-money-check-alt fa-fw"></i> $<%= booking.cinema.price %> </li>
        <li class="py-1"> <i class="far fa-window-maximize fa-fw"></i> <%= booking.cinema.movie_selection %> </li>
        <li class="py-1"> <i class="fas fa-tv fa-fw"></i> <%= booking.cinema.screen_size %> inch screen </li>
      </ul>
      <h5> <%= booking.cinema.description %> </h5>

      <%= link_to "Cancel", "#", class:"btn btn-outline-danger my-2" %>
      </div>
    <% end %>
</div>






