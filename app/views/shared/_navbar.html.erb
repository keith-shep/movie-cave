<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mb-4">
  <%= link_to cinemas_path, class: "navbar-brand" do %>
  <%= image_tag "logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto" >
      <li class="nav-item active">
        <%= link_to "Browse caves", cinemas_path, class: "nav-link text-success"%>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Add cave", new_cinema_path, class: "nav-link text-success" %>
      </li>
      <!-- message icon -->
      <li class="nav-item active">
        <%= link_to "#", class: "nav-link text-success" do%>
          <i class="far fa-envelope"></i>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://i.pinimg.com/originals/cb/b6/1d/cbb61dc9f560a4e96c2c64f41a90ce3f.jpg", class: "avatar dropdown-toggle rounded-circle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Settings", "#", class: "dropdown-item" %>
          <%= link_to "Payment", "#", class: "dropdown-item" %>
          <%= link_to "Bookings", user_bookings_path(current_user), class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Sign in", new_user_session_path, class: "btn btn-outline-success" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
